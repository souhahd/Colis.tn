{% extends 'layouts/base.html.twig' %}

{% block title %}Se connecter!{% endblock %}

{% block body %}
    <div class="container mx-auto" style="margin-top: 110px; margin-bottom: 50px">
        <div class="row">
            <div class="col-md-6 mx-auto bg-light mt-4 p-4">
                <form method="post" class="row g-3">
                    <div class="col-12">
                    <h1 class="text-danger" style="text-align: center">Se connecter</h1>
                    </div>

                    <div class="col-12">
                        {% if error %}
                            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                        {% endif %}
                    </div>

                    <div class="col-12 my-3">

                        <input type="email" name="email" id="email" class="form-control" required autofocus placeholder="Email">
                    </div>
                    <div class="col-12 my-3">

                        <input type="password" name="password" id="password" class="form-control" required placeholder="Mot de passe">
                    </div>
                    <div class="col-12">
                    <input type="hidden" name="_csrf_token"
                           value="{{ csrf_token('authenticate') }}">
                    </div>

                    <div class="checkbox mb-312">
                        <label class="col-12">
                            <input type="checkbox" name="_remember_me"> Remember me
                        </label>

                    </div>
                    <div class="col-12">
                        <button class="btn btn-lg btn-primary btn-block float-end my-3" type="submit" formnovalidate style="justify-items: center">
                            Connecter
                        </button>
                    </div>
                    <div class="card-footer">
                        <div class="d-flex justify-content-center links">
                            Pas de compte ?
                        </div>
                        <div class="d-flex justify-content-center">
                            <a href="{{ path('app_register') }}" style="color: #F17228">Inscrivez-vous</a>
                        </div>
                        <div class="d-flex justify-content-center">
                            <a href="#" style="color: #F17228">Mot de passe oubli√© ?</a>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
{% endblock %}
