{% extends 'layouts/base.html.twig' %}

{% block title %}Nouveau Trajet!{% endblock %}
{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-md-6 mx-auto bg-light mt-4 p-4">
                <form method="post" class="row g-3" novalidate>
                    <input type="hidden" name="_token" value="{{ csrf_token('trajet_create') }}">
                    <div class="col-12">
                        <h1 class="h2 mb-3 font-weight-normal" style="text-align: center">Ajouter un trajet</h1>
                    </div>

                    {{ form_start(trajetForm) }}
                    <div class="col-12">
                        {{ form_row(trajetForm.lieuDepartTrajet) }}
                    </div>

                    <div class="col-12">
                        {{ form_row(trajetForm.lieuArriveeTrajet) }}
                    </div>

                    <div class="col-12">
                        {{ form_row(trajetForm.detourMaxTrajet) }}
                    </div>

                    <div class="col-12">
                        {{ form_row(trajetForm.dateDepart) }}
                    </div>

                    <div class="col-12">
                        {{ form_row(trajetForm.formatObjet) }}
                    </div>




                    <div class="col-12" style="text-align: center">
                        <input class="btn btn-lg btn-primary float-end" type="submit"  value="Ajouter" formnovalidate>

                        <button class="btn btn-lg btn-primary float-end" type="reset">
                            Annuler
                        </button>

                    </div>
                    {{ form_end(trajetForm) }}





                </form>
            </div>
        </div>
    </div>
{% endblock %}