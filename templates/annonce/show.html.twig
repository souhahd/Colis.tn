{% extends 'layouts/base.html.twig' %}

{% block title %}Annonce n° {{ annonce.id}}  {% endblock %}
{% block body %}


         <article>
            <h1> {{ annonce.adresseDepart }}</h1>
            <h1> {{ annonce.adresseArrivee }}</h1>
             <a>
                 {{ annonce.dateProposee|date }}
             </a>
             <a href="{{ path('app_annonce_edit', {'id': annonce.id}) }}"> Modifier </a>
             <a href="#" onclick="event.preventDefault(); confirm('Est ce que vous étes sure?') && document.getElementById('js-annonce-delete-form').submit();" > Supprimer </a>

             <form id="js-annonce-delete-form" action="{{ path('app_annonce_delete', {'id': annonce.id}) }}" method="post" style="display: none;">
                 <input type="hidden" name="csrf_token" value="{{ csrf_token('annonce_deletion_' ~ annonce.id) }}">
                 <input type="hidden" name="_method" value="DELETE">
             </form>

        </article>



{% endblock %}